    <title>GetAllTerminals</title>
</head>
<body>
    <div class="container">
        @*<a href="/Master/Index" type="button" class="btn btn-primary">Add Terminal</a>*@
        <div style="width:90%; margin:0 auto;">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>CustomerID</th>
                        <th>Terminal Name</th>
                        <th>Mac Address</th>
                        <th>IsActive</th>
                        <th>Created On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        $('#demoGrid').DataTable({
            "ajax": {
                "url": "/Master/getTerminalmaster",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "ID", "autoWidth": true },
                { "data": "TerminalName", "autoWidth": true },
                { "data": "MacAddress", "autoWidth": true },
                { "data": "IsActive", "autoWidth": true },
                { "data": "CreatedOn", "autoWidth": true },
                {
                    "data": "ID", "render": function (ID) {
                        var IDs = parseInt(ID);
                        var returns = "<a class='btn btn-secondary' href='/Master/update-terminal?ID=" + IDs + "'>Edit</a>";
                        return returns;
                    }
                }
            ]
        });
    });
</script>
