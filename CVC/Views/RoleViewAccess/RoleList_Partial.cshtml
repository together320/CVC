@model  CVC.ViewModels.RoleViewModel


<style>
    .error {
        color: red;
    }
</style>
<table class="display data-table" cellspacing="0" width="100%" border="1" cellpadding="0" style="border-collapse:collapse;" bordercolor="#e7eaec">
    <thead>
        <tr>

            <th align="left">
                <label>Role Name</label>
            </th>
            <th align="left">
                <label>Parent Role</label>
            </th>

            <th align="left">
                <label>Status</label>
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstRoleViewModel)
        {
            <tr>

                <td>
                    <a href="/NAdministration/RoleAccess/ModuleAccessList?RoleId=@item.RoleId">@item.RoleName</a>
                    @*@Html.ActionLink(@item.RoleName, "GetAllModule", "/NAdministration/RoleAccess", new { RoleId =@item.RoleId }, null)*@

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentRole)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StatusName)
                </td>
                <td align="center">
                    <span onclick="javascript: GetRoleById(@item.RoleId)" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>|
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">

    $(document).ready(function () {
        $('.data-table').DataTable({
            responsive: {
                details: {
                    type: 'column'
                }
            },
            //"order": [[3, "asc"]],
            "language": {
                "lengthMenu": "_MENU_ records per page",
            },
            columnDefs: [{ orderable: false, targets: [-1, -2] }]
            //columnDefs: [{ orderable: false, targets: [3], visible: false, searchable: false }]
        });
        $('.js-example-basic-single').select2();
    });

</script>