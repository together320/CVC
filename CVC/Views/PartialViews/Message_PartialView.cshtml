<script type="text/javascript">
    $("#btnInfoOk").click(function () {
        debugger;
        if (autoAcceptUntrustedCertificatesForOpcUaClient) {
            opcUaClientCertificateType = "TrustedIssuer";
            connectToOpcUaClient(machineIdForOpcUaClient, opcUaClientCertificateType);
        }
        else {
            if (redirectUrlAfterLogin != "") {
                // setTimeout(function () {
                window.location.href = Q.resolveUrl(redirectUrlAfterLogin);
                // }, 3000);
            }
        }
    });

    $("#btnInfoCancel").click(function () {
        if (autoAcceptRejectCertificatesForOpcUaClient) {
            debugger;
            opcUaClientCertificateType = "Rejected";
            connectToOpcUaClient(machineIdForOpcUaClient, opcUaClientCertificateType);
        }

        else {
           if (redirectUrlAfterLogin != "")
            {
                // setTimeout(function () {
                window.location.href = Q.resolveUrl(redirectUrlAfterLogin);
                // }, 3000);
            }
        }

    });

</script>