                    doc.autoTableText("Equipment ID: " + reportDetails.Serial, doc.internal.pageSize.width - autoOptions.margin.right, 20, {
                        halign: 'right'
                    });

                    doc.autoTableText(reportDetails.comname, autoOptions.margin.left + 45, 10, {
